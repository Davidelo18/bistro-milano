mixin menu(name, options)
    ul(class=name)
        each option in options
            li(class=name + '-element')
                a(class=name + '-link', href=option[1])= option[0]

mixin section(title)
    section.content
        h2.content__title= title
        block

mixin gallery-image(name, images)
    each image in images
        div(class=name + "__image-container")
            a(href=image[0], target="_blank")
                img(src=image[0], alt=image[1])

mixin menu-food(type, foods)
    .menu-food
        h2.menu-food__type= type
        ul(class="menu-food__list")
            each food in foods
                li(class="menu-food__list-element")
                    p.menu-food__name= food[0]
                    p.menu-food__ingredients= food[1]

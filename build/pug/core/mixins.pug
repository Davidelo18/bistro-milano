mixin menu(name, options)
    ul(class=name)
        each option in options
            li(class=name + '__element')
                a(class=name + '__link', href=option[1])= option[0]

mixin section(title)
    section.content
        h2.content__title= title
        block

mixin gallery-image(name, images)
    each image in images
        div(class=name + "__image-container")
            img(src=image[0], alt=image[1])
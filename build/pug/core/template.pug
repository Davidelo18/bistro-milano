include mixins
include variables
doctype html
html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(charset="UTF-8")
        meta(name="description", content='"Gotowanie to akt miłości, podarunek, sposób na dzielenie z innymi małych sekretów"')
        link(rel='apple-touch-icon' sizes='180x180' href=path_to_images + 'apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href=path_to_images + 'favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href=path_to_images + 'favicon-16x16.png')
        link(rel='manifest' href=path_to_documents + 'site.webmanifest')
        link(rel='shortcut icon' href=path_to_images + 'favicon.ico')
        meta(name='msapplication-TileColor' content='#da532c')
        meta(name='msapplication-config' content=path_to_documents + 'browserconfig.xml')
        meta(name='theme-color' content='#ffffff')
        link(rel="stylesheet", href="/css/main.css")
        link(href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap", rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Parisienne&display=swap", rel="stylesheet")
        script(src="/js/app.js")